{
  "manifest_version": 3,
  "name": "LaTeX Auto Renderer (KaTeX)",
  "version": "1.0.0",
  "description": "Renders LaTeX delimiters like \\(...\\) and $$...$$ on pages that show LaTeX as plain text.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "vendor/katex.min.js",
        "vendor/auto-render.min.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["vendor/katex.min.css", "vendor/fonts/*"],
      "matches": ["<all_urls>"]
    }
  ]
}