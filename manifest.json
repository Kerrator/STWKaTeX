{
  "manifest_version": 3,
  "name": "LaTeX Auto Renderer (KaTeX)",
  "version": "1.0.0",
  "description": "Renders LaTeX delimiters like \\(...\\) and $$...$$ on pages that show LaTeX as plain text.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_popup": "settings.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "default_title": "LaTeX Auto Renderer Settings"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": false
  },
  "permissions": ["storage"],
  "host_permissions": ["*://*quan*/*"],
  "content_scripts": [
    {
      "matches": ["*://*quan*/*"],
      "js": [
        "vendor/katex.min.js",
        "vendor/auto-render.min.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["vendor/katex.min.css", "vendor/fonts/*"],
      "matches": ["<all_urls>"]
    }
  ]
}